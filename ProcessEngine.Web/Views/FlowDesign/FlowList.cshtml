<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>流程列表</title>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/common.css" rel="stylesheet" />
</head>
<body>
    <div class="container-header">
        流程
    </div>
    <div class="container" id="app">
        <div class="search">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">流程名称</label>
                    <div class="layui-input-inline">
                        <input type="text" v-model="name"
                               class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <div class="layui-input-inline">
                        <button type="button"  class="layui-btn layui-btn-primary" title="查询">
                            <i class="layui-icon layui-icon-search"></i>
                        </button>
                        <button type="button" class="layui-btn layui-btn-primary" title="导出">
                            <i class="layui-icon layui-icon-export"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div style="overflow-y: auto">
            <table class="layui-table text-center">
                <thead>
                    <tr>
                        <th>流程名称</th>
                        <th>实体名称</th>
                        <th>是否禁用</th>
                        <th>版本</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td v-if="dataList==null" colspan="11">数据加载中...</td>
                        <td v-else-if="dataList && dataList.length == 0" colspan="11">暂无数据</td>
                    </tr>
                    <tr v-for="(item, index) in dataList">
                        <td>{{item.name}}</td>
                        <td>{{item.domainName}}</td>
                        <td v-if="item.isDisable!=true">否</td>
                        <td v-else>是</td>
                        <td>{{item.version}}</td>
                        <td>{{item.createTime}}</td>
                        <td>
                            <a class="layui-btn layui-btn-primary layui-btn-xs">查看</a>
                            <a class="layui-btn layui-btn-primary layui-btn-xs">查看</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div id="pager"></div>
    </div>
    <script src="~/js/require.js-2.3.6/require.min.js"></script>
    <script src="~/layui/layui.js"></script>
    <script src="~/js/common/require-config.js"></script>
    <script>
        require(['jquery', 'vue'], function ($, Vue) {
            var vue = new Vue({
                el: '#app',
                data: {
                    dataList: null,
                    totalCount: '',
                    name: '',
                    pageSize: ''
                },
                mounted: function () {
                    var that = this;
                    layui.use(['layer'], function () {
                        var layer = layui.layer
                        that.defaultList(1, 10, true);
                    });
                },
                methods: {
                    defaultList: function (currentPage, pageSize, initPage) {
                        var that = this;
                        var loading = layer.load(3);
                        $.ajax({
                            type: 'post',
                            dataType: 'json',
                            url: '/FlowDesign/GetList',
                            data: {
                                'currentPage': currentPage,
                                'pageSize': pageSize,
                                'nodeName': that.nodeName
                            },
                            success: function (res) {
                                that.dataList = res.data.data;
                                that.total = res.data.total;
                                if (initPage) {
                                    layui.use(['laypage', 'layer'], function () {
                                        var laypage = layui.laypage
                                            , layer = layui.layer;
                                        laypage.render({
                                            elem: 'pager'
                                            , count: that.total
                                            , layout: ['count', 'prev', 'page', 'next', 'limit', 'skip']
                                            , jump: function (obj, first) {
                                                that.pageSize = obj.limit;
                                                if (!first) {
                                                    that.defaultList(obj.curr, obj.limit, false);
                                                }
                                            }
                                        });
                                    });
                                };
                                layer.close(loading)
                            }
                        });
                    },
                    search: function () {
                        this.defaultList(1, this.pageSize, true);
                    },
                    deleteById: function (id) {
                        var loading = layer.load(3);
                        var that = this;
                        $.ajax({
                            type: 'get',
                            dataType: 'json',
                            url: '/api/menu/delete/' + id,
                            success: function (res) {
                                if (res.code == '0') {
                                    that.defaultList(1, that.pageSize, true);
                                    //that.usePage();
                                    layer.close(loading);
                                }
                            }
                        });
                    }

                }
            });

        })
    </script>
</body>
</html>